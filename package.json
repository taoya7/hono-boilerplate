{
  "name": "server",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch --clear-screen=false src/main.ts",
    "build": "npm run clean && npm run compile && npm run post-build",
    "clean": "rimraf dist",
    "compile": "tsup",
    "post-build": "tsx ./scripts/build.ts",
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "start:test": "cross-env NODE_ENV=test node dist/main.js",
    "test": "cross-env NODE_ENV=test vitest run",
    "test:watch": "cross-env NODE_ENV=test vitest",
    "obfuscate": "tsx ./scripts/obfuscator-code.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.758.0",
    "@aws-sdk/lib-storage": "3.758.0",
    "@aws-sdk/s3-presigned-post": "3.758.0",
    "@aws-sdk/s3-request-presigner": "3.758.0",
    "@aws-sdk/signature-v4-crt": "^3.616.0",
    "@hono/zod-openapi": "^0.16.0",
    "@hono/zod-validator": "^0.2.2",
    "@repo/utils": "workspace:^",
    "ali-oss": "^6.21.0",
    "ansis": "^3.2.0",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "hono": "^4.6.1",
    "ioredis": "^5.4.1",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.14",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.1",
    "@hono/node-server": "^1.12.2",
    "@hono/swagger-ui": "^0.4.1",
    "@types/ali-oss": "^6.16.11",
    "@types/crypto-js": "^4.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.4",
    "c12": "^1.11.2",
    "defu": "^6.1.4",
    "eslint": "^9.5.0",
    "fs-extra": "^11.2.0",
    "javascript-obfuscator": "^4.1.1",
    "oy-vey": "^0.12.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "tsx": "^4.7.1",
    "turbo": "^2.0.4",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0",
    "yaml": "^2.5.1"
  }
}
